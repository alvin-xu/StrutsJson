<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.tg.entity">
   <class name="Friend" table="friend">
       <composite-id name="relationShip" class="FriendRS">
           <key-property name="userName" column="username" />
           <key-property name="friendName" column="friendname" />
       </composite-id>
   </class>
</hibernate-mapping>