<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.tg.entity">
   <class name="Comment" table="comment">
       <id name="orderNo" column="orderno" type="java.lang.String">
           <generator class="assigned" />
       </id>
       <property name="viewNo" column="viewno" type="java.lang.String"></property>
       <property name="commentator"  column="commentator" type="java.lang.String"/>
       <property name="content"  column="content" type="java.lang.String"/>
       <property name="score"  column="score" type="java.lang.Integer"/>
   </class>
</hibernate-mapping>